// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AdminRole {
  ADMIN
  MODERATOR
}

model Admin {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  password  String
  role      AdminRole @default(ADMIN)
  isActive  Boolean   @default(true)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  createdAlbums  Album[] @relation("AdminCreatedAlbums")
  uploadedPhotos Photo[] @relation("AdminUploadedPhotos")
}

model Album {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  photos      Photo[]
  createdById Int
  createdBy   Admin   @relation("AdminCreatedAlbums", fields: [createdById], references: [id])
}

model Photo {
  id           Int      @id @default(autoincrement())
  filename     String
  originalName String
  mimetype     String
  size         Int
  path         String
  url          String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Relations
  album      Album  @relation(fields: [albumId], references: [id], onDelete: Cascade)
  albumId    Int
  uploadedBy Admin? @relation("AdminUploadedPhotos", fields: [adminId], references: [id])
  adminId    Int?
}
